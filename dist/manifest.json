{
  "manifest_version": 3,
  "name": "ReelSense - AI Attention Manager",
  "version": "1.0.0",
  "description": "AI-powered attention manager that detects mindless scrolling on Instagram Reels and YouTube Shorts",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-instagram.js-loader-c44e5f1c.js"
      ],
      "matches": [
        "*://*.instagram.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "assets/content-youtube.js-loader-b0ae738d.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.youtube.com/*"
      ],
      "resources": [
        "*.js",
        "*.css"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "resources": [
        "assets/register_all_kernels-580e0044.js",
        "assets/_commonjsHelpers-de833af9.js",
        "assets/content-instagram.js-1378d659.js"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/register_all_kernels-580e0044.js",
        "assets/_commonjsHelpers-de833af9.js",
        "assets/content-youtube.js-d711cfc8.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
